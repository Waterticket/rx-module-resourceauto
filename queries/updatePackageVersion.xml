<query id="updatePackageVersion" action="update">
    <tables>
        <table name="resourceauto_update" />
    </tables>
    <columns>
        <column name="version" var="version" notnull="notnull" />
        <column name="regdate" default="curdate()" notnull="notnull" />
    </columns>
    <conditions>
        <condition operation="equal" column="package_srl" var="package_srl" filter="number" notnull="notnull" pipe="and" />
    </conditions>
</query>
